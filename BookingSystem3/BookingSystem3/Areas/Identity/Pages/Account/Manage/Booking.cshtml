@page
@model BookingModel
@{
    ViewData["Title"] = "Booking";
    ViewData["ActivePage"] = ManageNavPages.Booking;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.StandardPrice"></label>
                <input asp-for="Input.StandardPrice" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.MaxBookings"></label>
                <input asp-for="Input.MaxBookings" class="form-control" disabled/>
                <span asp-validation-for="Input.MaxBookings" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.VATNumber"></label>
                <input asp-for="Input.VATNumber" class="form-control"/>
                <span asp-validation-for="Input.VATNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}