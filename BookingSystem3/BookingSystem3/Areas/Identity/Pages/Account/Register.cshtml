@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    <center><h1>@ViewData["Title"]</h1></center>
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="loginForm">
        <div class="loginContainer">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.Email" placeholder="Enter Email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" placeholder="Enter Password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.ConfirmPassword" placeholder="Confirm Password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit">Register</button>
            <div class="seperator">
                <div class="orLabel">OR</div>
            </div>
            <div class="form-group">
                <a class="button signupbtn" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
            </div>
        </div>
    </form>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
