@model BookingSystem3.Models.Booking
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Rediger booking</h2>


<style>
    form {
        padding-left: 5%;
    }
    table input, table select, table textarea{
        width: 100%;
    }
</style>

<form method="post">
    <input type="hidden" value="@Model.bookingID" asp-for="bookingID"/>
    <table>
        <tr>
            <td><label>Ansvarlig</label></td>
            <td><input type="text" /></td>
        </tr>
        <tr>
            <td><label>Dato</label></td>
            <td><input type="date" value="@Model.date.ToString("yyyy-MM-dd")" asp-for="date"/></td>
        </tr>
        <tr>
            <td><label>Start</label></td>
            <td><input type="time" value="@Model.startTime.ToString("HH:mm")" asp-for="startTime"/></td>
        </tr>
        <tr>
            <td><label>Slut</label></td>
            <td><input type="time" value="@Model.startTime.AddMinutes(Model.duration).ToString("HH:mm")" asp-for="duration"/></td>
        </tr>
        <tr>
            <td><label>Repræsentant</label></td>
            <td><input type="text" /></td>
        </tr>
        <tr>
            <td><label>Firma</label></td>
            <td><input type="text" /></td>
        </tr>
        <tr>
            <td><label>Status</label></td>
            <td>
                <select>
                    <option>Ikke betalt</option>
                    <option>Faktura Afventer</option>
                    <option>Betalt</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label>Emne</label></td>
            <td>
                <select asp-for="topic">
                    <option>Microsoft Project</option>
                    <option>Projekt styring</option>
                    <option>Andet</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Kommentarer</td>
            <td><textarea placeholder="Kommentarer" asp-for="comment">@Model.comment</textarea></td>
        </tr>
    </table>
    <input type="submit" />
</form>