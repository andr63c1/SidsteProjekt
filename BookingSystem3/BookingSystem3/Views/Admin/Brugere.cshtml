@using BookingSystem3.Data
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<ApplicationUser>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Brugere</h2>

<table class="brugere table" style="width:100%">
    <tr>
        <th>Navn</th>
        <th>Email</th>
        <th>Telefon</th>
        <th>Rettigheder</th>
        <th>Firma</th>
        <th></th>
        <th></th>

    </tr>
    @foreach (ApplicationUser user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@string.Join(",", UserManager.GetRolesAsync(user).Result)</td>
            <td>@user.Company</td>
            <td><a href="/admin/editUser/@user.Id">Rediger/Mere</a></td>
            <td><a href="/admin/deleteUser/@user.Id">Slet</a></td>
        </tr>
    }
</table> 